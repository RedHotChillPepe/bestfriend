{
  "expo": {
    "name": "Лучший друг",
    "slug": "bestfriend",
    "version": "1.2.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/LoadingBear.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff",
      "loading": false
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Мы используем доступ к микрофону для записи голосовых сообщений. Без этого разрешения запись голоса будет невозможна.",
        "NSAppleMusicUsageDescription": "Мы используем доступ к аудиофайлам, чтобы вы могли импортировать их в приложение для воспроизведения. Без этого разрешения добавление ваших аудиофайлов будет невозможным.",
        "NSPhotoLibraryUsageDescription": "Мы используем доступ к аудиофайлам, чтобы вы могли импортировать их в приложение для воспроизведения. Без этого разрешения добавление ваших аудиофайлов будет невозможным.",
        "UIBackgroundModes": [
          "audio"
        ]
      },
      "bundleIdentifier": "com.basit.mishka",
      "buildNumber": "2"
    },
    "android": {
      "versionCode": 14,
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACTION_OPEN_DOCUMENT",
        "FOREGROUND_SERVICE",
        "WAKE_LOCK",
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "RECORD_AUDIO",
        "WAKE_LOCK",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.READ_CALENDAR",
        "android.permission.WRITE_CALENDAR"
      ],
      "package": "com.basit.mishka"
    },
    "web": {
      "favicon": "./assets/icon.png"
    },
    "plugins": [
      "expo-font",
      "expo-secure-store",
      "expo-av",
      "expo-asset",
      "expo-calendar"
    ],
    "extra": {
      "eas": {
        "projectId": "7a73e7ea-85cb-46f4-9138-7054ffda3d20"
      }
    },
    "owner": "bahamamama"
  }
}
